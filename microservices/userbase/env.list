##### Environment variables #####
MONGO_URL=mongodb://mongo:27017/digibank
CURRENCY=EUR

##### Accounts #####
ACCOUNTS_SERVICE_HOST=digibank-accounts-svc
ACCOUNTS_SERVICE_PORT=3400
DROP_ACCOUNTS_ENDPOINT=/api/accounts/drop

##### Authentication #####
AUTHENTICATION_SERVICE_HOST=digibank-authentication-svc
AUTHENTICATION_SERVICE_PORT=3200
GET_USERS_ENDPOINT=/api/user/get

##### Bills #####
BILLS_SERVICE_HOST=digibank-bills-svc
BILLS_SERVICE_PORT=3800
UPSERT_BILL_ENDPOINT=/api/bills/create
DROP_BILLS_ENDPOINT=/api/bills/drop

##### Transactions #####
TRANSACTIONS_SERVICE_HOST=digibank-transactions-svc
TRANSACTIONS_SERVICE_PORT=3600
CREATE_TRANSACTION_ENDPOINT=/api/transactions/create
DROP_TRANSACTIONS_ENDPOINT=/api/transactions/drop
